@{
    Layout = null;
}

<div>
    <h5>Purchase Orders</h5>
</div>

<table id="dataTable-poList" class="display" style="width:80%;">
    <thead style="font-size: 10pt;">
        <tr>
            <th>PO Number</th>
            <th>Supplier</th>
            <th>Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody style="font-size: 10pt;"></tbody>
</table>

<script>
    var table;
    $(document).ready(function () {

        $.ajax({
            url: 'http://localhost:49921/api/Restful/getpolist',
            type: 'get',
            dataType: 'json',
            success: function (data) {
                table = $('#dataTable-poList').DataTable({
                    paging: true,
                    sort: true,
                    searching: true,
                    "order": [[3, "desc"], [0, "desc"]],
                    "iDisplayLength": 5,
                    data: data,
                    columns: [
                        { 'data': 'PONumber' },
                        { 'data': 'CompanyName' },
                        {
                            'data': 'Date',
                            'render': function (jsonDate) {

                                var date = new Date(jsonDate.substr(0));
                                var month = date.getMonth() + 1;
                                return date.getDate() + "/" + month + "/" + date.getFullYear();

                            }
                        },
                        { 'data': 'Status' }
                    ],
                    columnDef: [{
                        className: 'text-center', targets: [0, 1, 2, 3]
                    }],
                });
            }
        });
    });

    $(document).ajaxComplete(function () {
        $('#dataTable-poList tbody').on('click', 'tr', function () {
            var data = table.row(this).data();

            jQuery.ajax({
                type: 'POST',
                url: '/StorePurchase/DisplayPO',
                data: data,
                async: false
            });

            window.location.href = '@Url.Action("Purchase", "Store")';
        });


    });
</script>

