@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>
    $(document).ready(function () {
        $('#dataTable-newPO').DataTable({
            scrollY: '30vh',
            scrollCollapse: true,
            paging: true
        });
    });

    $(function () {
        $("#datepicker-PODate").datepicker();
        $("#datepicker-PODeliveryDate").datepicker();
    });
</script>

<div>
    <h2>Create Purchase Order</h2>
</div>

<div class="create-PO-dates">
    <label>Date: <input type="text" id="datepicker-PODate"></label>
    <label>Expected Delivery Date: <input type="text" id="datepicker-PODeliveryDate"></label>
</div>

<div>
    <p>Remarks:</p>
    <textarea rows="4" cols="50">
        Enter remarks here.
    </textarea>
</div>

<table id="dataTable-newPO" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Item Code</th>
            <th>Product Name</th>
            <th>Supplier</th>
            <th>Qty</th>
            <th>Unit of Measure</th>
            <th>Unit Price ($)</th>
            <th>Total ($)</th>
            <th>GST ($)</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>C010</td>
            <td>Pad Postit "2</td>
            <td>Supplier A</td>
            <td>30</td>
            <td>Box</td>
            <td>30</td>
            <td>300</td>
            <td>21</td>
        </tr>
    </tbody>
</table>

<button class="btn-blue">@Html.ActionLink("Add New Item", "Home", "Dept")</button>

<button class="btn-blue">@Html.ActionLink("Cancel", "Home", "Dept")</button>
<button class="btn-blue">@Html.ActionLink("Create", "Home", "Dept")</button>
