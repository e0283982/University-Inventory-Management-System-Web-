@{
    Layout = null;
}


<script>
    $(document).ready(function () {
        $('#dataTable-goodsReceived').DataTable({
            scrollY: '30vh',
            scrollCollapse: true,
            paging: true
        });
    });

    var table = $('#dataTable-goodsReceived').DataTable();

    $('#dataTable-goodsReceived tbody').on('click', 'tr', function () {
        var data = table.row(this).data();
        //'<%Session["SelectedPONumber"] = "' + data[0] + '"; %>';
        var dataToBeSent = data[0];
        alert('You clicked on Purchase Order with GR Number: ' + data[0] + '\'s row');

        $.ajax({
            url: '/StorePurchase/DisplayGR',
            data: dataToBeSent,
            type: 'POST',
        });

        window.location.href = '@Url.Action("Purchase", "Store")';

    });

    $(function () {
        $("#datepicker").datepicker();
    });
</script>

<div>
    <h2>List of Goods Receipts</h2>
</div>

<table id="dataTable-goodsReceived" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Goods Received #</th>
            <th>Date</th>
