@{
    Layout = null;
}

<script>
    $(document).ready(function () {
        $('#dataTable-storeDisbursementList').DataTable({
            scrollY: '30vh',
            scrollCollapse: true,
            paging: true
        });
    });

    var table = $('#dataTable-storeDisbursementList').DataTable();

    $('#dataTable-storeDisbursementList tbody').on('click', 'tr', function () {
        var data = table.row(this).data();
        //'<%Session["SelectedPONumber"] = "' + data[0] + '"; %>';
        var dataToBeSent = data[0];
        alert('You clicked on Disbursement with Date: ' + data[0] + '.');

        $.ajax({
            url: '/StoreDisbursements/DisplayDisbursementDetails',
            data: dataToBeSent,
            type: 'POST',
        });

        window.location.href = '@Url.Action("Disbursements", "Store")';

    });
</script>

<div>
    <h2>List of Disbursements</h2>
</div>


<table id="dataTable-storeDisbursementList" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Date</th>
