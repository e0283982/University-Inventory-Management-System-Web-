@{
    Layout = null;
}

<script>    

    var table;

    $.ajax({
        url: 'http://localhost:49921/api/Restful/GetRequisitionList',
        method: 'get',
        dataType: 'json',
        success: function (data) {
            table = $('#dataTable-storeDisbursementReqList').DataTable({
                paging: true,
                sort: true,
                searching: true,
                scrollY: 200,
                "order": [[3, "desc"]],
                data: data,
                columns: [
                    {
                        'data': 'DateRequested',
                        'render': function (jsonDate) {

                             var date = new Date(jsonDate.substr(0));
                             var month = date.getMonth() + 1;
                             return date.getDate() + "/" + month + "/" + date.getFullYear();
                        }

                    },
                    { 'data': 'FormID' },
                    { 'data': 'DepartmentName' },
                    { 'data': 'Status' }
                ],
                 drawCallback: function (settings) {
                        $('#dataTable-storeDisbursementReqList tbody').off().on('click', 'tr', function () {
                        var data = table.row(this).data();
                        //var storeReqFormId = data["FormID"];
                        //alert('You clicked on Requisition Form Number: ' + data["FormID"] + '\'s row');

                        $.ajax({
                            url: '/StoreDisbursements/DisplayReqDetails',
                            data: { storeReqFormId: data["FormID"] },
                            type: 'POST',
                        });

                        window.location.href = '@Url.Action("Disbursements", "Store")';

                    });

                }
            });
        }
    });

               


</script>

<div>
    <h2>List of Requisitions</h2>
</div>


<table id="dataTable-storeDisbursementReqList" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Date</th>
            <th>Requisition Form #</th>
            <th>Department</th>
            <th>Status</th>
        </tr>
    </thead>    

</table>
