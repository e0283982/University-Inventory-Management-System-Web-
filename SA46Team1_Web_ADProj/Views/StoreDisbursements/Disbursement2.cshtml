@{
    Layout = null;
}

<script>
    $(document).ready(function () {

        //var id = 'DH-1';

        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetDisbursementListDetails/' + '@Session["storeDisbursementFormId"]',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                table = $('#dataTable-storeDisbursementList-details').DataTable({
                    paging: true,
                    sort: true,
                    searching: true,
                    scrollY: 200,
                    data: data,
                    columns: [
                        { 'data': 'Description' },
                        { 'data': 'UoM' },
                        { 'data': 'QuantityOrdered' },
                        { 'data': 'QuantityReceived' }
                    ]
                });                

            }
        });       



    });
</script>

<div>
    <h2>Disbursement Information</h2>
    <h3>Disbursement #: @Session["storeDisbursementFormId"]</h3>
</div>


<table id="dataTable-storeDisbursementList-details" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Item Description</th>
            <th>Unit of Measurement</th>
            <th>Quantity Needed</th>
            <th>Qty Delivered</th>
        </tr>
    </thead>
   
</table>

<hr />

<div class="row">
    <div class="col-md-12">
        <div style="float: right">
            <span>
                @using (Html.BeginForm("BackToDisbursementList", "StoreDisbursements", FormMethod.Post))
                {
                    <input class="btn btn-info" type="submit" value="Back" />
                }
            </span>
        </div>
    </div>
</div>