@{
    Layout = null;
}

<script>
    $(document).ready(function () {

        var table;
        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetCollectionList',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                table = $('#dataTable-collectionList').DataTable({
                    paging: true,
                    sort: true,
                    searching: true,
                    scrollY: 200,
                    data: data,
                    columns: [
                        { 'data': 'Description' },
                        { 'data': 'UoM' },
                        { 'data': 'QuantityBackOrdered' }
                    ]
                });
            }
        });
    });

</script>

<div>
    <h2>Collection List</h2>
</div>


<table id="dataTable-collectionList" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Item Description</th>
            <th>Unit of Measure</th>
            <th>Total Expected Delivery</th>
        </tr>
    </thead>

</table>

<div>@Html.ActionLink("Print", "Home", "Dept", null, new { @class = "btn btn-info" })</div>
