@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>
    $(document).ready(function () {
        $('#dataTable-newReq').DataTable({
            scrollY: '30vh',
            scrollCollapse: true,
            paging: true
        });
    });
</script>

<div>
    <h2>New Requisition</h2>
    <h3>Requisition Form #</h3>
</div>


<table id="dataTable-newReq" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Description</th>
            <th>Unit of Measure</th>
            <th>New Order Qty</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>Pad Post it</td>
            <td>Dozen</td>
            <td>10</td>
        </tr>

        <tr>
            <td>Pad Post it 2</td>
            <td>Dozen</td>
            <td>11</td>
        </tr>
    </tbody>
</table>

<button class="btn-blue">@Html.ActionLink("Add New Item", "Home", "Dept")</button>
<button class="btn-blue">@Html.ActionLink("Submit for Approval", "Home", "Dept")</button>
