            <br />

            <div>
                <label>New Order Qty: </label>
                @Html.EditorFor(tuple => tuple.Item2.QuantityOrdered, new { htmlAttributes = new { @class = "form-control", @placeholder = "QuantityOrdered", @id = "new-item-order-qty", @min = "1", @step = "1", @Value = "1" }, })
            </div>

            <hr />

            <div class="row">
                @*<div class="col-md-6">
                        <div style="float:right">
                            <span>
                                <button class="btn btn-lu-red" id="btn-submit-cancel">Cancel</button>
                            </span>
                        </div>
                    </div>*@
                <div class="col-md-12">
                    <div>
                        <button class="btn btn-lu-green btn-block" id="btn-submit-add-items">Add</button>
                        @*<input id="btn-submit-add-item" class="btn btn-lu-green" type="submit" value="Add" />*@
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<div id="dialog-confirm-submit-new-req" class="hidden"  style="overflow:hidden;"@*title="Confirm Submission (New Requisition)"*@>
    <div style="text-align:center;">
        <h4>Confirm Submission</h4>
        <h6>Are you sure you want to submit the requisition?</h6>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div style="float:right">
                <span>
                    <button class="btn btn-lu-red" id="btn-confirm-submit-cancel">Cancel</button>
                </span>
            </div>
        </div>
        <div class="col-md-6">
            <span>
                <button class="btn btn-lu-green" id="btn-confirm-submit-submit">Submit</button>
            </span>
        </div>
    </div>
</div>

<div id="dialog-new-req-submited" class="hidden" title="New Request submitted">
    <br />
    <h5>New requisition request has been submitted for approval.</h5>
</div>

<div id="dialog-new-req-edit-no-item" class="hidden" title="No Item to edit">
    <br />
    <h5>There are no items to edit.</h5>
</div>

