<script>
    $(function () {
        var pageIndex =@Session["DeptReqTabIndex"].ToString();

        switch (pageIndex) {
            case 1:
                $("#tabs-min").tabs();
                break;
            case 2:
                $("#tabs-min").tabs({ active: 1 });
                break;
            case 3:
                $("#tabs-min").tabs({ active: 2 });
                break;
            case 4:
                $("#tabs-min").tabs({ active: 3 });
                break;
            default:
                $("#tabs-min").tabs();
                break;
            }
        });
</script>

@if (User.IsInRole("Employee"))
{
    <div id="tabs-min">
        <ul>
            <li style="font-size: 10pt;"><a href="/lu/Dept/DeptRequisition/NewReq">New Requisition</a></li>
            <li style="font-size: 10pt;"><a href="/lu/Dept/DeptRequisition/BackOrders">Back Orders</a></li>
        </ul>
    </div>
}
else if (User.IsInRole("Employee Representative"))
{
    <div id="tabs-min">
        <ul>
            <li style="font-size: 10pt;"><a href="/lu/Dept/DeptRequisition/NewReq">New Requisition</a></li>
            <li style="font-size: 10pt;"><a href="/lu/Dept/DeptRequisition/BackOrders">Back Orders</a></li>
            <li style="font-size: 10pt;"><a href="/lu/Dept/DeptRequisition/UpcomingDelivery">Upcoming Delivery</a></li>
            <li style="font-size: 10pt;"><a href="/lu/Dept/DeptRequisition/CollectionList">Collection List</a></li>
        </ul>
    </div>
}
