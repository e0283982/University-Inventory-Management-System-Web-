@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />

<script>
    var table;

    $(document).ready(function () {
        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetReadPendingApprovals/'+ '@Session["DepartmentCode"]',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                table = $('#dataTable-notifications-read').DataTable({
                    paging: true,
                    sort: true,
                    searching: true,
                    //scrollY: 200,
                    data: data,
                    responsive: true,
                    columns: [
                        {
                            'data': 'DateReq',
                            'render': function (jsonDate) {

                                var date = new Date(jsonDate.substr(0));
                                var month = date.getMonth() + 1;
                                return date > 1 ? date.getDate() + "/" + month + "/" + date.getFullYear() : "";
                            }
                        
                        },
                        {
                            'data': 'ReqFormId',
                            'render': function (data, type, row) {
                                return '<p> There is a new requisition request ' + row["ReqFormId"] +' pending for approval.</p>';
                            }

                        }
                    ],
                    drawCallback: function (settings) {
                         $('#dataTable-notifications-read tbody').on('click', 'tr', function () {
                            //var data = table.row(this).data();

                            $.ajax({
                                url: '/DeptApproval/Approval',
                                type: 'POST',
                            });

                            window.location.href = '@Url.Action("Approval", "Dept")';
                        });
                    }
                });
            }
        });
    });

</script>

<h5>Notifications - Read</h5>

<table id="dataTable-notifications-read" class="display" style="width:80%;">
    <thead style="font-size: 10pt;">
        <tr>
            <th>Date Requested</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody style="font-size: 10pt;"></tbody>
</table>