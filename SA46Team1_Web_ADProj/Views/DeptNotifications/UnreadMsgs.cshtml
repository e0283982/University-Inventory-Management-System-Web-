@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />

<script>
    var table;

    $(document).ready(function () {
        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetUnreadPendingApprovals/'+ '@Session["LoginEmployeeID"]',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                table = $('#dataTable-notifications-unread').DataTable({
                    paging: true,
                    sort: true,
                    searching: true,
                    "iDisplayLength": 5,
                    //scrollY: 200,
                    data: data,
                    responsive: true,
                    columns: [
                        {
                            'data': 'DateRequested',
                            'render': function (jsonDate) {

                                var date = new Date(jsonDate.substr(0));
                                var month = date.getMonth() + 1;
                                return date > 1 ? date.getDate() + "/" + month + "/" + date.getFullYear() : "";
                            }

                        },
                        {
                            'data': 'FormID',
                            'render': function (data, type, row) {
                                if (row["ApprovalStatus"] == "Pending") {
                                    return '<p> There is a new requisition request ' + row["FormID"] + ' is pending for approval.</p>';
                                }
                                else {
                                    return '<p> The requisition request ' + row["FormID"] + ' has been ' + row["ApprovalStatus"] + '.</p>';
                                }
                            }
                        }
                    ],
                    drawCallback: function (settings) {
                         $('#dataTable-notifications-unread tbody').on('click', 'tr', function () {
                             var data = table.row(this).data();
                             //alert(data["ReqFormId"]);

                             $.ajax({
                                 url: '/DeptNotifications/MsgClicked',
                                 data: { reqFormId: data["ReqFormId"] },
                                 type: 'POST',
                             });

                            window.location.href = '@Url.Action("Approval", "Dept")';
                        });
                    }
                });
            }
        });
    });

</script>

<h5>Notifications - Unread</h5>

<table id="dataTable-notifications-unread" class="display" style="width:80%;">
    <thead style="font-size: 10pt;">
        <tr>
            <th>Date Requested</th>
            <th>Message</th>
        </tr>
    </thead>
    <tbody style="font-size: 10pt;"></tbody>
</table>