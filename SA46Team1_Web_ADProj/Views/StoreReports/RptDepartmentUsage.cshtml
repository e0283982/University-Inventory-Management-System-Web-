@{
    Layout = null;
}

@{
    ViewBag.Title = "Department Usage Cost Report";
}
<div>
    <h2>Department Usage Cost Report</h2>

    <h4>
        @Html.ActionLink("Export to PDF", "ExportRptDepartmentUsage", "StoreReports", null, new { @class = "btn btn-info" })
    </h4>
</div>


<div>
    <label>Department: </label>
    @Html.DropDownList("SelectDepartmentDesc", ViewBag.DepartmentList as SelectList)
</div>

<div>
    <label>Category: </label>
    @Html.DropDownList("SelectCategory", ViewBag.CategoryList as SelectList)
</div>
<div>
    <p>Year</p>
    <form action="/Store/Home">
        <select name="year" multiple>
            <option value="year2017">2017</option>
            <option value="year2018">2018</option>           
        </select>
        <p></p>
        <p></p>
        <p>Month(s)</p>
        <form action="/Store/Home">
            <select name="months" multiple>
                <option value="jan">Jan</option>
                <option value="feb">Feb</option>
                <option value="mar">Mar</option>
                <option value="apr">Aor</option>
                <option value="may">May</option>
                <option value="jun">Jun</option>
                <option value="jul">Jul</option>
                <option value="aug">Aug</option>
                <option value="sep">Sep</option>
                <option value="oct">Oct</option>
                <option value="nov">Nov</option>
                <option value="dec">Dec</option>
            </select>
            <p></p>
            <p></p>
            <p>
                <input class="btn-blue" type="submit">
            </p>
        </form>
</div>



<table id="dataTable-deptUsage" class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Item Code</th>
            <th>Description</th>
            <th>Date</th>
            <th>Unit of Measure</th>
            <th>Quantity</th>
            <th>Avg Unit Cost ($)</th>
            <th>Total Cost ($)</th>
        </tr>
    </thead>
</table>

<script>
    $(document).ready(function () {

        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetRptDepartmentUsage',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                $('#dataTable-deptUsage').dataTable({
                    paging: true,
                    sort: true,
                    searching: false,
                    scrollY: 200,
                    data: data,
                    columns: [
                        { 'data': 'CategoryName' },
                        { 'data': 'ItemCode' },
                        { 'data': 'Description' },
                        { 'data': 'Date' },
                        { 'data': 'UoM' },
                        { 'data': 'QuantityReceived' },
                        { 'data': 'AvgUnitCost' },
                        { 'data': 'TotalCost' }
                    ]
                });
            }
        });


    });
</script>