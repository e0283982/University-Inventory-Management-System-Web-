@{
    Layout = null;
}

@{
    ViewBag.Title = "Reorder Report";
}
<div>
    <h2>Reorder Report</h2>

    <h4>
        @Html.ActionLink("Export to PDF", "ExportRptReorder", "StoreReports", null, new { @class = "btn btn-info" })
    </h4>
</div>


<div>
    <label>Item Description: </label>
    @Html.DropDownList("SelectItemDesc", ViewBag.ItemsList as SelectList)
</div>

<div>
    <label>Category: </label>
    @Html.DropDownList("SelectCategory", ViewBag.CategoryList as SelectList)
</div>
<p></p>
<p></p>
<div>
    <p>
        <input class="btn-blue" type="submit">
    </p>
    </form>
</div>

<table id="dataTable-storeReorder" class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Item Code</th>
            <th>Description</th>
            <th>Unit of Measure</th>
            <th>Quantity</th>
            <th>Reorder Level</th>
            <th>Reorder Quantity</th>
            <th>PO Backordered</th>
            <th>Req Backordered</th>
            <th>Suggested Reorder Qty</th>
        </tr>
    </thead>
</table>

<script>
    $(document).ready(function () {

        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetRptReorder',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                $('#dataTable-storeReorder').dataTable({
                    paging: true,
                    sort: true,
                    searching: false,
                    scrollY: 200,
                    data: data,
                    columns: [
                        { 'data': 'CategoryName' },
                        { 'data': 'ItemCode' },
                        { 'data': 'Description' },
                        { 'data': 'UoM' },
                        { 'data': 'Quantity' },
                        { 'data': 'ReOrderLevel' },
                        { 'data': 'ReOrderQuantity' },
                        { 'data': 'POBackOrdered' },
                        { 'data': 'SRBackOrdered' },
                        { 'data': 'RecommendQty' }
                    ]
                });
            }
        });


    });
</script>