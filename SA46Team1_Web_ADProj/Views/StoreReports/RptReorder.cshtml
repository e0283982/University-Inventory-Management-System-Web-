@{
    Layout = null;
}

@{
    ViewBag.Title = "Reorder Report";
}
<div>
    <h2>Reorder Report</h2>
</div>

<div class="row">
    <div class="col-md-6">
        <div>
            <label>Item Description: </label>
            @Html.DropDownList("SelectItemDesc", ViewBag.ItemsList as SelectList)
        </div>

        <div>
            <label>Category: </label>
            @Html.DropDownList("SelectCategory", ViewBag.CategoryList as SelectList)
        </div>
        <div>
            <span>
                <input class="btn btn-info" type="submit">
            </span>
        </div>
    </div>
    <div class="col-md-6">
        <div style="float: right; padding-top: 62px;">
            <span>
                @Html.ActionLink("Export to PDF", "ExportRptReorder", "StoreReports", null, new { @class = "btn btn-info" })
            </span>
        </div>      
    </div>
</div>

<hr />     

<table id="dataTable-storeReorder" class="table">
    <thead>
        <tr>
            <th>Category</th>
            <th>Item Code</th>
            <th>Description</th>
            <th>Unit of Measure</th>
            <th>Quantity</th>
            <th>Reorder Level</th>
            <th>Reorder Quantity</th>
            <th>PO Backordered</th>
            <th>Req Backordered</th>
            <th>Suggested Reorder Qty</th>
        </tr>
    </thead>
</table>

<script>
    $(document).ready(function () {
        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetRptReorder',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                $('#dataTable-storeReorder').dataTable({
                    paging: true,
                    sort: true,
                    searching: false,
                    scrollY: 200,
                    data: data,
                    columns: [
                        { 'data': 'CategoryName' },
                        { 'data': 'ItemCode' },
                        { 'data': 'Description' },
                        { 'data': 'UoM' },
                        { 'data': 'Quantity' },
                        { 'data': 'ReOrderLevel' },
                        { 'data': 'ReOrderQuantity' },
                        { 'data': 'POBackOrdered' },
                        { 'data': 'SRBackOrdered' },
                        { 'data': 'RecommendQty' }
                    ]
                });
            }
        });
    });
</script>
