@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />

<script>
    $(document).ready(function () {

        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetStockAdjustmentList',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                $('#dataTable-storeInventoryAdj').dataTable({
                    paging: true,
                    sort: true,
                    searching: true,
                    //scrollY: 200,
                    "order": [[4, "desc"]],
                    data: data,
                    columns: [
                        {
                            'data': 'DateRequested',
                            'render': function (jsonDate) {

                                var date = new Date(jsonDate.substr(0));
                                var month = date.getMonth() + 1;
                                return date.getDate() + "/" + month + "/" + date.getFullYear();

                            }

                        },
                        { 'data': 'Description' },
                        { 'data': 'ItemQuantity' },
                        { 'data': 'Remarks' },
                        { 'data': 'Status' }                        
                    ]
                });
            }
        });
    
       


        //$('#dataTable-storeInventoryAdj').DataTable({
        //    scrollY: '30vh',
        //    scrollCollapse: true,
        //    paging: true
        //});
    });
</script>

<div>
    <h2>Inventory - Stock Adjustment</h2>
</div>


<table id="dataTable-storeInventoryAdj" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Date</th>
            <th>Item Description</th>
            <th>Quantity</th>
            <th>Missing/Damaged</th>
            <th>Status</th>
        </tr>
    </thead>

</table>

<hr />

<div class="row">
    <div class="col-md-12">
        <div style="float: right">
            <span>
                @using (Html.BeginForm("CreateNewStockAdj", "StoreInventory", FormMethod.Post))
                {
                    <input class="btn btn-info" type="submit" value="Create New Stock Adjustment" />
                }
            </span>
        </div>
    </div>
</div>