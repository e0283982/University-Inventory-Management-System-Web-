@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />

<script>
    var table;

    $(document).ready(function () {

        $.ajax({
            url: 'http://localhost:49921/api/Restful/GetItemsById/' + '@Session["MaintenanceItemCode"]',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                table = $('#dataTable-inventory-items-details').DataTable({
                    paging: false,
                    sort: false,
                    searching: false,
                    scrollY: 50,
                    "iDisplayLength": 5,
                    "bInfo": false,
                    data: [data],
                    columns: [
                        { 'data': 'ItemCode' },
                        { 'data': 'Description'},
                        { 'data': 'CategoryName'},
                        { 'data': 'UoM' },
                        { 'data': 's1'  },
                        { 'data': 's2'  },
                        { 'data': 's3'  },
                        {
                            'data': 'Active',
                            'render': function (data, type, row) {
                                return data == 1 ? "Active" : "Inactive";
                            }
                        }
                    ],
                    columnDefs: [
                        { className: 'text-center', targets: [0, 1, 2, 3, 4, 5, 6, 7] },
                    ],
                });
        
            }
        });
    });
</script>

<div>
    <h5>Item Code: @Session["MaintenanceItemCode"]</h5>
</div>


<table id="dataTable-inventory-items-details" class="display" style="width:80%;">
    <thead style="font-size: 10pt;">
        <tr>
            <th>Item Code</th>
            <th>Description</th>
            <th>Category</th>
            <th>Unit of Measure</th>
            <th>Supplier 1</th>
            <th>Supplier 2</th>
            <th>Supplier 3</th>
            <th>Active</th>
        </tr>
    </thead>
    <tbody style="font-size: 10pt;"></tbody>
</table>

<hr />

<div class="row">
    <div class="col-md-11">
        <div>
            <span>
                @using (Html.BeginForm("BackToInventoryOverviewList", "StoreInventory", FormMethod.Post))
                {
                    <input class="btn btn-lu-blue" type="submit" value="Back" />
                }
            </span>
        </div>
    </div>
</div>
