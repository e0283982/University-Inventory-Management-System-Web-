@{
    Layout = null;
}


@using SA46Team1_Web_ADProj.Models;
@model Bin


<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>
     $(document).ready(function () {

    var table;

    $.ajax({
        url: 'http://localhost:49921/api/Restful/GetBinsList',
        method: 'get',
        dataType: 'json',
        success: function (data) {
            table = $('#dataTable-store-bins').DataTable({
                paging: true,
                sort: true,
                searching: true,
                scrollY: 200,
                data: data,
                columns: [
                    { 'data': 'Number' },
                    { 'data': 'Location' },
                    {
                        'data': 'Active',
                        render: function (data, type, row) {

                            var status = data;
                            return status !=0 ? 'Active' : 'Inactive';
                        }
                    },
                ],
                 drawCallback: function (settings) {
                    $('#dataTable-store-bins tbody').on('click', 'tr', function () {
                        var data = table.row(this).data();

                        $.ajax({
                            url: '/StoreMaintenance/DisplayStoreBinDetails',
                            data: { maintenanceBinId: data["Number"] },
                            type: 'POST',
                        });

                        window.location.href = '@Url.Action("Maintenance", "Store")';

                    });
                },
                columnDefs: [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ]
            });
        }
        });
    });

    $(function () {
        $("#dialog-add-new-bin").dialog({
            autoOpen: false,
            width: "40%",
            maxWidth: "40%"
        });
    });

    $('#btn-add-new-bin').on('click', function () {
        $('#dialog-add-new-bin').dialog('open');
    });

    $(function () {
        $("#dialog-submit-add-bin").dialog({
            autoOpen: false,
            width: "40%",
            maxWidth: "40%"
        });
    });

    $('#btn-submit-add-bin').on('click', function () {
        $('#dialog-add-new-bin').dialog('close');
        $('#dialog-submit-add-bin').dialog('open');
    });
</script>

<div>
    <h2>Maintenance - Bin</h2>
</div>


<table id="dataTable-store-bins" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Bin Number</th>
            <th>Bin Name</th>
            <th>Active</th>
        </tr>
    </thead>
</table>

<button id="btn-add-new-bin" class="btn-blue">Add New Bin</button>

<div id="dialog-add-new-bin" class="hidden" title="Add Bin (Maintenance)">
    @using (Html.BeginForm("AddNewBin", "StoreMaintenance", FormMethod.Post, new { id = "form-submit-add-new-bin" }))
    {
        <div>
            <div>
                <label>Location: </label>
                @Html.EditorFor(model => model.Location, new { htmlAttributes = new { @class = "form-control", @placeholder = "Bin Location", @id = "new-bin-location" }, })
            </div>

            <div>
                <label>Item Code: </label>
                @Html.DropDownList("SelectBinItem", ViewBag.ItemsList as SelectList)
            </div>

            <input id="btn-submit-add-bin" class="btn-blue" type="submit" value="Add" />

        </div>
    }
</div>

<div id="dialog-submit-add-bin" class="hidden" title="Add Bin Successful (Maintenance)">
    <p>New Bin has been successfully added.</p>
</div>
