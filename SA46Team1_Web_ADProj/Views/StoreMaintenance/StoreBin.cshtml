@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>
    $(document).ready(function () {
        $('#dataTable-storeMaintenanceBin').DataTable({
            scrollY: '30vh',
            scrollCollapse: true,
            paging: true
        });
    });

    var table = $('#dataTable-storeMaintenanceBin').DataTable();

    $('#dataTable-storeMaintenanceBin tbody').on('click', 'tr', function () {
        var data = table.row(this).data();
        //'<%Session["SelectedPONumber"] = "' + data[0] + '"; %>';
        var dataToBeSent = data[0];
        alert('You clicked on Item: ' + data[0] + '.');

        $.ajax({
            url: '/StoreMaintenance/DisplayStoreBinDetails',
            data: dataToBeSent,
            type: 'POST',
        });

        window.location.href = '@Url.Action("Maintenance", "Store")';

    });
</script>

<div>
    <h2>Maintenance - Bin</h2>
    <button class="btn-blue">@Html.ActionLink("Add New Bin", "Home", "Store")</button>
</div>


<table id="dataTable-storeMaintenanceBin" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Bin Name</th>
            <th>Active</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>Shelf 1, Bin 1</td>
            <td>
                <input type="checkbox" name="updateBinStatus" value="binStatus" checked>
                <br>
            </td>
        </tr>

        <tr>
            <td>Shelf 1, Bin 2</td>
            <td>
                <input type="checkbox" name="updateBinStatus" value="binStatus" checked>
                <br>
            </td>
        </tr>
    </tbody>
</table>
