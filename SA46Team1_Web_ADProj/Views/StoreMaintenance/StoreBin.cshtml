@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>
     $(document).ready(function () {

    var table;

    $.ajax({
        url: 'http://localhost:49921/api/Restful/GetBinsList',
        method: 'get',
        dataType: 'json',
        success: function (data) {
            table = $('#dataTable-store-bins').DataTable({
                paging: true,
                sort: true,
                searching: true,
                scrollY: 200,
                data: data,
                columns: [
                    { 'data': 'Number' },
                    { 'data': 'Location' },
                    {
                        'data': 'Active',
                        render: function (data, type, row) {

                            var status = data;
                            return status !=0 ? 'Active' : 'Inactive';
                        }
                    },
                ],
                 drawCallback: function (settings) {
                    $('#dataTable-store-bins tbody').on('click', 'tr', function () {
                        var data = table.row(this).data();

                        $.ajax({
                            url: '/StoreMaintenance/DisplayStoreBinDetails',
                            data: { maintenanceBinId: data["Number"] },
                            type: 'POST',
                        });

                        window.location.href = '@Url.Action("Maintenance", "Store")';

                    });
                },
                columnDefs: [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ]
            });
        }
        });
    });
</script>

<div>
    <h2>Maintenance - Bin</h2>
    <button class="btn-blue">@Html.ActionLink("Add New Bin", "Home", "Store")</button>
</div>


<table id="dataTable-store-bins" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Bin Number</th>
            <th>Bin Name</th>
            <th>Active</th>
        </tr>
    </thead>
</table>
