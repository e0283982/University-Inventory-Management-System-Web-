@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>
    $(document).ready(function () {
        $('#dataTable-storeMaintenanceItems').DataTable({
            scrollY: '30vh',
            scrollCollapse: true,
            paging: true
        });
    });

    var table = $('#dataTable-storeMaintenanceItems').DataTable();

    $('#dataTable-storeMaintenanceItems tbody').on('click', 'tr', function () {
        var data = table.row(this).data();
        //'<%Session["SelectedPONumber"] = "' + data[0] + '"; %>';
        var dataToBeSent = data[0];
        alert('You clicked on Item: ' + data[0] + '.');

        $.ajax({
            url: '/StoreMaintenance/DisplayItemDetails',
            data: dataToBeSent,
            type: 'POST',
        });

        window.location.href = '@Url.Action("Maintenance", "Store")';

    });
</script>

<div>
    <h2>Maintenance - Item</h2>
    <button class="btn-blue">@Html.ActionLink("Add New Item", "Home", "Store")</button>
</div>


<table id="dataTable-storeMaintenanceItems" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Description</th>
            <th>Category</th>
            <th>Unit of Measure</th>
            <th>Supplier 1</th>
            <th>Supplier 2</th>
            <th>Supplier 3</th>
            <th>Active</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <td>Postit Pad (small)</td>
            <td>Post-its</td>
            <td>Box</td>
            <td>Supplier A</td>
            <td>Supplier B</td>
            <td>Supplier C</td>
            <td>
                <input type="checkbox" name="updateItemStatus" value="itemStatus" checked>
                <br>
            </td>
        </tr>

    </tbody>
</table>
