@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>
    $(document).ready(function () {

    var table;

    $.ajax({
        url: 'http://localhost:49921/api/Restful/GetCategoryList/'+ '@Session["MaintenanceCategoryId"]',
        method: 'get',
        dataType: 'json',
        success: function (data) {
            table = $('#dataTable-store-categories-details').DataTable({
                paging: true,
                sort: true,
                searching: true,
                scrollY: 200,
                data: data,
                columns: [
                    { 'data': 'CategoryID' },
                    { 'data': 'CategoryName' },
                    {
                        'data': 'Active',
                        render: function (data, type, row) {

                            var status = data;
                            return status !=0 ? 'Active' : 'Inactive';
                        }
                    },
                ],
                columnDefs: [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ]
            });
        }
        });
    });
</script>

<div>
    <h2>Category: @Session["MaintenanceCategoryId"]</h2>
</div>


<table id="dataTable-store-categories-details" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Category Id</th>
            <th>Name</th>
            <th>Active</th>
        </tr>
    </thead>
</table>


<button class="btn-blue">@Html.ActionLink("Edit", "Home", "Store")</button>


<div id="details-back-btn">

    @using (Html.BeginForm("BackToCategoriesMaintenanceList", "StoreMaintenance", FormMethod.Post))
    {
        <input class="btn-blue" type="submit" value="Back" />
    }
</div>
