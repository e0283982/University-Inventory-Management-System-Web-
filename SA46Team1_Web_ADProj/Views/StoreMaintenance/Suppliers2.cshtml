@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />

<script>
    var table;

    $(document).ready(function () {

    $.ajax({
        url: 'http://localhost:49921/api/Restful/GetSuppliersList/'+ '@Session["MaintenanceSupplierCode"]',
        method: 'get',
        dataType: 'json',
        success: function (data) {
            d = data;

            table = $('#dataTable-store-suppliers-details').DataTable({
                paging: true,
                sort: true,
                searching: true,
                scrollY: 200,
                data: data,
                columns: [
                    { 'data': 'SupplierCode' },
                    {
                        'data': 'CompanyName',
                        "render": function (data, type, full, meta) {
                            return '<input id="input-supplier-company-name" type="text" value="' + $('<div/>').text(data).html() + '">';
                        }
                    },
                    {
                        'data': 'ContactName',
                        "render": function (data, type, full, meta) {
                            return '<input id="input-supplier-contact-name" type="text" value="' + $('<div/>').text(data).html() + '">';
                        }
                    },
                    {
                        'data': 'PhoneNo',
                        "render": function (data, type, full, meta) {
                            return '<input id="input-supplier-phone-no" type="text" value="' + $('<div/>').text(data).html() + '">';
                        }
                    },
                    {
                        'data': 'FaxNo',
                        "render": function (data, type, full, meta) {
                            return '<input id="input-supplier-fax-no" type="text" value="' + $('<div/>').text(data).html() + '">';
                        }
                    },
                    {
                        'data': 'Address',
                        "render": function (data, type, full, meta) {
                            return '<input id="input-supplier-address" type="text" value="' + $('<div/>').text(data).html() + '">';
                        }
                    },
                    {
                        'data': 'Active',
                        render: function (data, type, row) {

                            if (data != 0) {
                                //active status
                                return '<input id="input-supplier-active" type="checkbox" checked>';
                            } else {
                                return '<input id="input-supplier-active" type="checkbox">';
                            }
                        }
                    },
                ],
                //columnDefs: [
                //    {
                //        "targets": [0],
                //        "visible": false,
                //        "searchable": false
                //    }
                //]
            });
        }
        });
    });

    $(function () {
        $("#dialog-submit-edit-supplier").dialog({
            autoOpen: false,
            width: "40%",
            maxWidth: "40%"
        });
    });


    $(document).ajaxComplete(function () {
        $('#btn-edit-supplier').click(function () {
            var dataToSend = "";
            var arr = [];

            dataToSend = table.rows(0).data();
            for (var i = 0; i < Object.keys(d).length; i++) {
                var rowData = dataToSend[i];
                rowData.CompanyName = $("#input-supplier-company-name").val();
                rowData.ContactName = $("#input-supplier-contact-name").val();
                rowData.PhoneNo = $("#input-supplier-phone-no").val();
                rowData.FaxNo = $("#input-supplier-fax-no").val();
                rowData.Address = $("#input-supplier-address").val();
                rowData.Active = $("#input-supplier-active").prop('checked');

                arr.push(rowData);
            }

            $('#dialog-submit-edit-supplier').dialog('open');


            $.ajax({
                type: 'POST',
                url: '/Store/StoreMaintenance/Suppliers/EditSupplier',
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                data: JSON.stringify({ arr: arr })
            });

            window.location.href = '@Url.Action("Maintenance", "Store")';

        });
    });
</script>

<div>
    <h2>Supplier: @Session["MaintenanceSupplierCode"]</h2>
</div>


<table id="dataTable-store-suppliers-details" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Supplier Code</th>
            <th>Name</th>
            <th>Contact</th>
            <th>Phone No.</th>
            <th>Fax No.</th>
            <th>Address</th>
            <th>Active</th>
        </tr>
    </thead>

    <tbody>
        <tr>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </tbody>
</table>

<button class="btn-blue">@Html.ActionLink("View Price List", "Home", "Store")</button>
<button id="btn-edit-supplier" class="btn-blue">Edit</button>

<div id="details-back-btn">

    @using (Html.BeginForm("BackToSuppliersMaintenanceList", "StoreMaintenance", FormMethod.Post))
    {
        <input class="btn-blue" type="submit" value="Back" />
    }
</div>


<div id="dialog-submit-edit-supplier" class="hidden" title="Edit Supplier Successful (Maintenance)">
    <p>Supplier has been successfully edited.</p>
</div>