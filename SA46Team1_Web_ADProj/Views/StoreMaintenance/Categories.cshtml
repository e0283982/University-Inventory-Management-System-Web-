@{
    Layout = null;
}

@using SA46Team1_Web_ADProj.Models;
@model Category

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>

     $(document).ready(function () {

    var table;

    $.ajax({
        url: 'http://localhost:49921/api/Restful/GetCategoryList',
        method: 'get',
        dataType: 'json',
        success: function (data) {
            table = $('#dataTable-store-categories').DataTable({
                paging: true,
                sort: true,
                searching: true,
                scrollY: 200,
                data: data,
                columns: [
                    { 'data': 'CategoryID' },
                    { 'data': 'CategoryName' },
                    {
                        'data': 'Active',
                        render: function (data, type, row) {

                            var status = data;
                            return status !=0 ? 'Active' : 'Inactive';
                        }
                    },
                ],
                 drawCallback: function (settings) {
                    $('#dataTable-store-categories tbody').on('click', 'tr', function () {
                        var data = table.row(this).data();

                        $.ajax({
                            url: '/StoreMaintenance/DisplayCategoryDetails',
                            data: { maintenanceCategoryId: data["CategoryID"] },
                            type: 'POST',
                        });

                        window.location.href = '@Url.Action("Maintenance", "Store")';

                    });
                },
                columnDefs: [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ]
            });
        }
        });
    });

    $(function () {
        $("#dialog-add-new-category").dialog({
            autoOpen: false,
            width: "40%",
            maxWidth: "40%"
        });
    });

    $('#btn-add-new-category').on('click', function () {
        $('#dialog-add-new-category').dialog('open');
    });

    $(function () {
        $("#dialog-submit-add-category").dialog({
            autoOpen: false,
            width: "40%",
            maxWidth: "40%"
        });
    });

    $('#btn-submit-add-category').on('click', function () {
        $('#dialog-add-new-category').dialog('close');
        $('#dialog-submit-add-category').dialog('open');
    });
</script>

<div>
    <h2>Maintenance - Category</h2>
</div>


<table id="dataTable-store-categories" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Item</th>
            <th>Active</th>
        </tr>
    </thead>
</table>


<button id="btn-add-new-category" class="btn-blue">Add New Category</button>

<div id="dialog-add-new-category" class="hidden" title="Add Category (Maintenance)">
    @using (Html.BeginForm("AddNewCategory", "StoreMaintenance", FormMethod.Post, new { id = "form-submit-add-new-category" }))
    {
        <div>
            <div>
                <label>Category Name: </label>
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Category Name", @id = "new-category-name" }, })
            </div>

            <input id="btn-submit-add-category" class="btn-blue" type="submit" value="Add" />

        </div>
    }
</div>

<div id="dialog-submit-add-category" class="hidden" title="Add Category Successful (Maintenance)">
    <p>New Category has been successfully added.</p>       
</div>
