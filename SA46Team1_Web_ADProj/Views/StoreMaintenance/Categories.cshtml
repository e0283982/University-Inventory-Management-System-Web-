@{
    Layout = null;
}

<link href="@Url.Content("~/Content/common.css")" rel="stylesheet" type="text/css" />


<script>

     $(document).ready(function () {

    var table;

    $.ajax({
        url: 'http://localhost:49921/api/Restful/GetCategoryList',
        method: 'get',
        dataType: 'json',
        success: function (data) {
            table = $('#dataTable-store-categories').DataTable({
                paging: true,
                sort: true,
                searching: true,
                scrollY: 200,
                data: data,
                columns: [
                    { 'data': 'CategoryID' },
                    { 'data': 'CategoryName' },
                    {
                        'data': 'Active',
                        render: function (data, type, row) {

                            var status = data;
                            return status !=0 ? 'Active' : 'Inactive';
                        }
                    },
                ],
                 drawCallback: function (settings) {
                    $('#dataTable-store-categories tbody').on('click', 'tr', function () {
                        var data = table.row(this).data();

                        $.ajax({
                            url: '/StoreMaintenance/DisplayCategoryDetails',
                            data: { maintenanceCategoryId: data["CategoryID"] },
                            type: 'POST',
                        });

                        window.location.href = '@Url.Action("Maintenance", "Store")';

                    });
                },
                columnDefs: [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false
                    }
                ]
            });
        }
        });
    });
</script>

<div>
    <h2>Maintenance - Category</h2>
</div>


<table id="dataTable-store-categories" class="display" style="width:80%;">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Item</th>
            <th>Active</th>
        </tr>
    </thead>
</table>


<button class="btn-blue">@Html.ActionLink("Add New Category", "Home", "Store")</button>

