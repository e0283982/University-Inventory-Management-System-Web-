@{
    Layout = null;
}

<script>
     $(document).ready(function () {
        $.ajax({
            url: 'http://localhost:49921/api/Restful/EmployeeList',
            method: 'get',
            dataType: 'json',
            success: function (data) {
                $('#dataTable-roles-delegation').dataTable({
                    paging: true,
                    sort: true,
                    searching: true,
                    scrollY: 200,
                    data: data,
                    columns: [
                        { 'data': 'EmployeeName' },
                        { 'data': 'Designation' },
                        { 'data': 'Designation' }
                    ]
                });
            }
        });

    });
